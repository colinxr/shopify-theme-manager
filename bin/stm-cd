#!/bin/bash

# Check if alias argument is provided
if [ -z "$1" ]; then
    echo "Usage: stm-cd <store-alias>"
    exit 1
fi

# Get directory from stm cd command
dir=$(stm cd "$1")

# Check if stm cd command succeeded
if [ $? -eq 0 ]; then
    cd "$dir"
else
    # Error message already printed by stm cd
    exit 1
fi 